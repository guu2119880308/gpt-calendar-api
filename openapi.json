{
  "openapi": "3.1.0",
  "info": {
    "title": "Google Calendar Event API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://guu2119880308.github.io/gpt-calendar-api"
    }
  ],
  "paths": {
    "/event": {
      "post": {
        "operationId": "createEvent",
        "summary": "カレンダーに予定を追加",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Event"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "イベント作成に成功"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Event": {
        "type": "object",
        "properties": {
          "summary": {
            "type": "string",
            "description": "予定のタイトル"
          },
          "start": {
            "type": "string",
            "format": "date-time",
            "description": "開始日時（ISO 8601形式）"
          },
          "end": {
            "type": "string",
            "format": "date-time",
            "description": "終了日時（ISO 8601形式）"
          }
        },
        "required": ["summary", "start", "end"]
      }
    }
  }
}
